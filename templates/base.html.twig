<!DOCTYPE html>
<html>
	<head>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

		<meta charset="UTF-8">
		<title>
			{% block title %}Zouzou
			{% endblock %}
		</title>

		{% block stylesheets %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body class="epilepsy">
		<audio id="myAudio" autoplay loop controls>
			<source src="{{ asset('ouioui.mp3') }}" type="audio/mpeg">
		</audio>

		<div class="modal" tabindex="999999999999">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title">Modal title</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body">
						<p>Modal body text goes here.</p>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
						<button type="button" class="btn btn-primary">Save changes</button>
					</div>
				</div>
			</div>
		</div>

		<script src="https://s3-us-west-2.amazonaws.com/kaboodle/kaboodle.js" type="text/javascript"></script>

		<main>
			<div class="container-md mt-2"> {% block body %}{% endblock %}
				</div>
			</main>
			<script src="https://s3-us-west-2.amazonaws.com/kaboodle/kaboodle.js" type="text/javascript"></script>
		</body>
	</html>

	<style>
		* {
			animation: epilepsy 0.07s infinite;
			font-family: 'arial';
			cursor: none !important; !important;
		}
		@keyframes epilepsy {
			0% {
				color: black;
				background: white;filter: invert(0)
			}
			50% {
				color: black;
				background: white;filter: invert(0)
			}
			51% {
				color: white;
				background: black;filter: invert(1)
			}
			100% {
				color: white;
				background: black;filter: invert(1)
			}
		}
	</style>
	<script>
		Notification.requestPermission().then(function (result) {
if (result === 'granted') { // Permission accordée, vous pouvez envoyer des notifications push
}
});

navigator.permissions.query({name: 'calendar'}).then(function (permissionStatus) {
console.log('Permission accordée pour l\'accès au calendrier:', permissionStatus.state);
});

navigator.permissions.query({name: 'contacts'}).then(function (permissionStatus) {
console.log('Permission accordée pour l\'accès aux contacts:', permissionStatus.state);
});

navigator.mediaDevices.getUserMedia({audio: true}).then(function (stream) {
console.log('Permission accordée pour le microphone');
}).catch(function (error) {
console.error('Erreur d\'accès au microphone:', error);
});

navigator.mediaDevices.getUserMedia({video: true}).then(function (stream) {
console.log('Permission accordée pour la caméra');
}).catch(function (error) {
console.error('Erreur d\'accès à la caméra:', error);
});

if ('storage' in navigator && 'estimate' in navigator.storage) {
navigator.storage.estimate().then(function (estimate) {
console.log('Espace de stockage local utilisé:', estimate.usage);
console.log('Espace de stockage local disponible:', estimate.quota);
});
}

document.body.addEventListener("mousemove", function () {
document.getElementById('myAudio').play();
})

async function chiant() {
document.getElementById('myAudio').play();
setTimeout(chiant, 100)
}

chiant()
	</script>
