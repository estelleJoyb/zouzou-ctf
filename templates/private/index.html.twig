{% extends 'base.html.twig' %}

{% block title %}Pas au bon endroit
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Un petit flag...</h1>
		<form action="/private/flag" method="post">
			<input type="number" name="id" required>
			<button type="submit"></button>
		</form>
		{% if flag %}
			<h1>{{flag.flag}}</h1>
		{% endif %}


	</div>

	<style>
		h1 {
			color: #000;
			color: rgba(0, 0, 0, 0) !important;
		}
	</style>
{% endblock %}
